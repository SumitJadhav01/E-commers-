<% layout("/boilerplate/boilerplate.ejs") %>
 
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mx-auto p-5 ">
<% for(let product of data) { %>
  <div class="card col"  >
 <a href="/product/<%= product.id %>" class="pro-link">
      <div class="card col"  >
        <img src="<%= product.image %>" class="card-img-top" alt="image" style="height:20rem">
        <div class="card-body">
          <h5 class="card-title"><%= product.title %></h5>
          <a href="/product/<%= product.id %>" class="btn btn-outline-primary">See More</a>
        </div>
      </div>
  </a>
  </div>
<% } %>
</div>
 
 