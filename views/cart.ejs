
<% layout("/boilerplate/boilerplate.ejs") %>
<body>
<h3 class="mt-3">Your Cart </h3>
<form action="/">
  <button type="submit" class="btn btn-primary auto  mt-3 mb-3 offset-5 ">continue Shoping</button>
</form>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">product</th>
        <th scope="col">Amount</th>
        <th scope="col">Total</th>
        <th scope="col">productID</th>
        <th scope="col">buyNow</th>
        <th scope="col">Remove</th>
      </tr>
    </thead>
    <tbody>
      <% for(let product of data) { %>
      <tr>
        <td><%= product.product %></td>
        <td><%= product.Amount %></td>
        <td><%= product.Total %></td>
        <td><%= product.productID %></td>
           <td>
            <form method="post" action="/cart/<%= product.productID %>?_method=DELETE">
              <button type="submit" class="btn btn-primary">Remove</button>
            </form>
          </tb>
         <td>
          <form method="post" action="/product/<%= product.productID %>/buynow">
            <input type="hidden" name="title" value="<%= product.product %>">
            <input type="hidden" name="Amount" value="<%= product.Amount %>">
            <input type="hidden" name="productID" value="<%= product.productID %>">
            <button type="submit" class="btn btn-primary">BuyNow</button>
          </form>
          </tb>
       </tr>
      
      <% } %>
    </tbody>

  </table>
<form action="/orderhistory">
  <button type="submit" class="btn btn-primary mt-3 mb-3 offset-9">check buy product</button>
</form>
</body>

